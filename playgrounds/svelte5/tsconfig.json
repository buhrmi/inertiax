{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "inertiax-svelte/server": ["../../node_modules/inertiax-svelte/dist/server"]
    }
  },
  "include": [
    "resources/**/*.d.ts",
    "resources/**/*.ts",
    "resources/**/*.js",
    "resources/**/*.svelte",
    "*.config.js",
    "*.config.cjs"
  ]
}
